<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"		
        Title="Chapitre 5 - RadioButton" 
        Width="320" 
        Height="280"  
		BorderBrush="DodgerBlue"
		>

    <Grid>		
<StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

<StackPanel Name="Grp1" Orientation="Vertical ">
	<Label FontWeight="Bold">Aimez-vous WPF et PowerShell</Label>
	<RadioButton Name="WPF_Oui">Oui</RadioButton>
	<RadioButton Name="WPF_Non">Non</RadioButton>
	<RadioButton Name="WPF_OuiNon" IsChecked="True">Peut être…</RadioButton>
	<Button Name="WPF_Resultat" Content="Votre réponse" Margin="0,5,0,0"/>

</StackPanel>
</StackPanel>

    </Grid>
</Window>        