<Window 
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
Title="Interface WPF" 
Width="500" Height="200"
>

<Grid>	


<StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="20,20,0,0">
<StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
<RadioButton x:Name="Visible" Content="Visible" Width="110"/>
<RadioButton x:Name="Hidden" Content="Hidden" Width="110"/>
<RadioButton x:Name="Collapsed" Content="Collapsed" Width="110"/>
</StackPanel>

<StackPanel x:Name="Premier" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,15,0,0">
<Label x:Name="Label1" Content="label1" Width="110"></Label>
<Label x:Name="Label2" Content="label2" Width="110"></Label>
</StackPanel>

<StackPanel x:Name="Second" Orientation="Horizontal" Margin="0,15,0,0" >
<Button x:Name="Button1" Content="Button 1" Width="110"></Button>
<TextBox x:Name="TextBox1" Text="TextBox 1" Margin="10,0,0,0" Width="270" Height="19"></TextBox>
</StackPanel>

<StackPanel x:Name="Troisieme" Orientation="Horizontal" Margin="0,10,0,0" >
<Button x:Name="Button2" Content="Button 2" Width="110"></Button>
<TextBox x:Name="TextBox2" Text="TextBox 2" Margin="10,0,0,0" Width="270" Height="19"></TextBox>
</StackPanel></StackPanel>



	
	
	
</Grid>
</Window>        
   

    
