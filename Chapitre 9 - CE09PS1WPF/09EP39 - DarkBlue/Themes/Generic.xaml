<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ModernChrome">
    <Style TargetType="{x:Type local:ModernWindow}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ModernWindow}">
                    <local:ModernWindowChrome x:Name="WindowChrome">
                        <AdornerDecorator>
                            <ContentPresenter />
                        </AdornerDecorator>
                    </local:ModernWindowChrome>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>