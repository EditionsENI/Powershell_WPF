<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"	
    	xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"   
		Title="Chapitre 7 - LiveCharts.WPF" 
        Width="480" 
        Height="480"  
		ResizeMode="CanResize"	
		>
              
  <Grid Margin="0,0,0,0" >
	
		<StackPanel Margin="25,25,25,25"  VerticalAlignment="Top" Orientation="Vertical">	

			<wpf:PieChart x:Name="pieChart" Width="400"  Height="400" LegendLocation="Bottom"  Hoverable="True" >
				<wpf:PieChart.Series>
					<wpf:PieSeries Title="Mac OS" Values="12" DataLabels="True"/>
					<wpf:PieSeries Title="Linux" Values="15" DataLabels="True" />
					<wpf:PieSeries Title="Windows" Values="65" DataLabels="True" />
					<wpf:PieSeries Title="FreeBSD" Values="3" DataLabels="True" />
				</wpf:PieChart.Series>
			</wpf:PieChart>
			
		</StackPanel>

    </Grid>
	</Window>     


   
   
    
    
    
