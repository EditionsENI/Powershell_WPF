<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"	
    	xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"   
		Title="Chapitre 7 - LiveCharts.WPF" 
        Width="480" 
        Height="480"  
		ResizeMode="CanResize"	
		>
              
	<Grid Margin="0,0,0,0" >
	
		<StackPanel Margin="25,25,25,25"  VerticalAlignment="Top" Orientation="Vertical">
		
			<wpf:PieChart x:Name="Doughnut"  Width="400"  Height="400"  LegendLocation="Right" InnerRadius="105" Margin="0 15">
				<wpf:PieChart.ChartLegend>
					<wpf:DefaultLegend BulletSize="20"></wpf:DefaultLegend>
				</wpf:PieChart.ChartLegend>
				<wpf:PieChart.DataTooltip>
					<wpf:DefaultTooltip BulletSize="20"></wpf:DefaultTooltip>
				</wpf:PieChart.DataTooltip>
			</wpf:PieChart>

		</StackPanel>

    </Grid>
	</Window>     


   
   
    
    
    
