            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>


 <Grid>
 <materialDesign:Card Margin="16"
  Background="{DynamicResource MaterialDesignBackground}">
<StackPanel>
  <Expander
    HorizontalAlignment="Stretch"
    Header="Expander N°1">
